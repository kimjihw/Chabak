<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".find.FindIdResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <View
            android:id="@+id/view_find_id_bg"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@color/bg_f4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_id_find_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/find_id_text"
            android:textColor="@color/text_222"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/view_find_id_bg"
            app:layout_constraintStart_toStartOf="@id/view_find_id_bg"
            app:layout_constraintTop_toTopOf="@id/view_find_id_bg" />

        <TextView
            style="@style/Medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="text@gmail.com"
            android:textColor="@color/main_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/tv_id_find_result"
            app:layout_constraintStart_toStartOf="@id/tv_id_find_result"
            app:layout_constraintTop_toBottomOf="@id/tv_id_find_result" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_id_find_login"
        style="@style/Medium_text"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/oauth"
        android:backgroundTint="@color/logo"
        android:text="@string/find_id_login"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/iv_phone_error" />

    <Button
        android:id="@+id/btn_id_find_pw"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_cancel"
        android:text="@string/find_pw"
        android:textColor="@color/text_555"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/iv_phone_error" />

</LinearLayout>