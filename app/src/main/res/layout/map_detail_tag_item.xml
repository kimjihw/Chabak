<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/map_detail_tag_view"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/map_detail_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/map_detail_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:text="#태그"
        android:textColor="@color/text_555"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/map_detail_tag_view"
        app:layout_constraintEnd_toEndOf="@id/map_detail_tag_view"
        app:layout_constraintStart_toStartOf="@id/map_detail_tag_view"
        app:layout_constraintTop_toTopOf="@id/map_detail_tag_view" />

</androidx.constraintlayout.widget.ConstraintLayout>